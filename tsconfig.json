{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "demo",
    "build"
  ]
}
